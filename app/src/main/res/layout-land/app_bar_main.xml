                        app:layout_rowWeight="1">

                        <TextView
                            android:id="@+id/t9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/card_background"
                            android:drawableBottom="@drawable/play"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="@string/ennea"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/c10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill_horizontal"
                        app:layout_rowWeight="1">

                        <TextView
                            android:id="@+id/t10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/card_background"
                            android:drawableBottom="@drawable/play"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="@string/deka"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.GridLayout>

                <TextView
                    android:id="@+id/t11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/choice_grid"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableBottom="@drawable/logo"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/idrima"
                    android:textAlignment="center"
                    android:textColor="@color/card_background"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>